@model Lab4.Models.User

@{
    ViewBag.Title = "SelectDialogUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Send Message</h2>

@using (Html.BeginForm("SendMessageUser", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Адресат:", htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.DropDownList("nickname", new SelectList(ViewBag.Friends), "Виберіть користувача", new { @class = "form-control" })
        <div class="form-group">
            @Html.Label("Повідомлення:", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextArea("MessageBody", "", 5, 100, null)
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="RegisterUser" value="Надіслати" class="btn btn-default" />
            </div>
        </div>
    </div>
}

